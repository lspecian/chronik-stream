# Dockerfile for testing Chronik
FROM rust:1.75-slim as builder

# Install build dependencies
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Copy source code
WORKDIR /app
COPY . .

# Build release binary
RUN cargo build --release

# Runtime stage
FROM debian:bookworm-slim

# Install runtime dependencies
RUN apt-get update && apt-get install -y \
    ca-certificates \
    netcat-traditional \
    && rm -rf /var/lib/apt/lists/*

# Copy binary from builder
COPY --from=builder /app/target/release/chronik-server /usr/local/bin/chronik-server

# Create data directory
RUN mkdir -p /var/lib/chronik

# Expose port
EXPOSE 9092

# Run Chronik
CMD ["/usr/local/bin/chronik-server", "--port", "9092", "--data-dir", "/var/lib/chronik"]